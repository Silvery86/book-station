{% extends 'admin.html.twig' %}

{% block title %}Author
{% endblock %}

{% block body %}
	<div class="content-wrapper">
		<div class="container-xxl flex-grow-1 container-p-y">
			<h1>{{ author.name }}</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ author.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ author.name }}</td>
					</tr>
					<tr>
						<th>Info</th>
						<td>{{ author.info }}</td>
					</tr>
					<tr>
						<th>Slug</th>
						<td>{{ author.slug }}</td>
					</tr>
				</tbody>
			</table>
			<div class="d-flex justify-content-start align-items-center">
				<a class="btn btn-primary mr-2" href="{{ path('admin_author_index') }}">
					<i class="fa-solid fa-circle-chevron-left me-2"></i>Back To List
				</a>

				<a class="btn btn-success mx-2" href="{{ path('admin_author_edit', {'id': author.id}) }}">
					<i class="ti ti-pencil ti-md me-2"></i>Edit
				</a>

				{{ include('admin/author/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
