{% extends 'admin.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h1>Category</h1>
            <table class="dt-column-search table table-striped display">
                <tbody class="table-border-bottom-0">
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>ParentId</th>
                    <td>{{ category.parentId }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ category.slug }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-start align-items-center">
                <a class="btn btn-primary mr-2" href="{{ path('admin_category_index') }}"><i
                            class="fa-solid fa-circle-chevron-left me-2"></i>Back To List</a>

                <a class="btn btn-success mx-2" href="{{ path('admin_category_edit', {'id': category.id}) }}"><i
                            class="ti ti-pencil ti-md me-2"></i> Edit</a>

                {{ include('admin/category/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
