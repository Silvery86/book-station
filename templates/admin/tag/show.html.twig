{% extends 'admin.html.twig' %}

{% block title %}tag
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h1>{{ tag.name }}</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tag.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ tag.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ tag.slug }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-start align-items-center">
                <a class="btn btn-primary mr-2" href="{{ path('admin_tag_index') }}">
                    <i class="fa-solid fa-circle-chevron-left me-2"></i>Back To List
                </a>

                <a class="btn btn-success mx-2" href="{{ path('admin_tag_edit', {'id': tag.id}) }}">
                    <i class="ti ti-pencil ti-md me-2"></i>Edit
                </a>

                {{ include('admin/tag/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
