{% extends 'admin.html.twig' %}

{% block title %}Book Manager
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card p-2 px-3 px-md-4">
                <div class="d-flex flex-row justify-content-between align-items-center">
                    <h5 class="card-header">Books Manager</h5>
                    <a href="{{ path('admin_book_new') }}" class="btn btn-primary">Add New Book</a>
                </div>

                <div class="card-datatable table-responsive text-nowrap">
                    <table class="dt-column-search table table-striped display" id="booksTable">
                        <thead>
                        <tr>
                            <th>Sku</th>
                            <th>Isbn</th>
                            <th>Thumbnail</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Sale Price</th>
                            <th>Stock</th>
                            <th>Sale Off</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                        {% for book in books %}
                            <tr>
                                <td>{{ book.sku }}</td>
                                <td>{{ book.isbn }}</td>
                                <td>  {% if book.thumbnail %}
                                        <img src="{{ asset('admin/uploads/images/' ~ book.thumbnail) }}" alt="Book Thumbnail" style="width: 100px; height: 100px;" />
                                    {% else %}
                                        <span>No thumbnail available</span>
                                    {% endif %}
                                </td>
                                <td>{{ book.name }}</td>

                                <td>{{ book.price|number_format(0, '.', ',') }} ₫</td>
                                <td>
                                    {% if book.discountType == 0 %}
                                        {{ (book.price - (book.price * (book.discountValue / 100)))|number_format(0, '.', ',') }} ₫ <!-- Percentage -->
                                    {% elseif book.discountType == 1 %}
                                        {{ (book.price - book.discountValue)|number_format(0, '.', ',') }} ₫ <!-- Value -->
                                    {% else %}
                                        No Discount
                                    {% endif %}
                                </td>
                                <td>{{ book.stock }}</td>
                                <td>
                                    {{ book.isSaleOff == 1 ? 'Yes' : 'No' }}
                                </td>
                                <td>
                                    {% if book.status == 0 %}
                                        Draft
                                    {% elseif book.status == 1 %}
                                        In Stock
                                    {% elseif book.status == 2 %}
                                        Out Of Stock
                                    {% else %}
                                        Unknown
                                    {% endif %}
                                </td>
                                <td >
                                    <div class="d-flex justify-content-start align-items-center">
                                        <a class="p-2" href="{{ path('admin_book_show', {'id': book.id}) }}"><i class="fa-regular fa-eye"></i></a>
                                        <a class="p-2" href="{{ path('admin_book_edit', {'id': book.id}) }}"><i class="ti ti-pencil ti-md"></i></a>
                                    </div>

                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="16">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Sku</th>
                            <th>Isbn</th>
                            <th>Thumbnail</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Sale Price</th>
                            <th>Stock</th>
                            <th>Sale Off</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $('#booksTable').DataTable({
            columnDefs: [
                {
                    targets: [0,1,2,5], // The column index you want to disable sorting on
                    orderable: false, // Disable sorting (and aria-sort)
                    class: 'text-wrap'
                }

            ],
            initComplete: function () {
                this.api()
                    .columns()
                    .every(function (index) {
                        var column = this;

                        // Define columns to use a dropdown filter
                        var dropdownColumns = [6, 7, 8];
                        var nonSearchColumns = [2];

                        if (dropdownColumns.includes(index)) {
                            // Create a select element and add options
                            var select = $('<select class="rounded-1 p-1"><option value="">Select</option></select>')
                                .appendTo($(column.footer()).empty())
                                .on('change', function () {
                                    column
                                        .search($(this).val() || '', { exact: true })
                                        .draw();
                                });

                            // Populate dropdown with unique values from the column
                            column
                                .data()
                                .unique()
                                .sort()
                                .each(function (d) {
                                    select.append('<option  value="' + d + '">' + d + '</option>');
                                });
                        } else {
                            if (nonSearchColumns.includes(index)) {
                            }else{
                                // Create an input element for text search
                                $('<input class="rounded-1 p-1" type="text" placeholder="Search" />')
                                    .appendTo($(column.footer()).empty())
                                    .on('keyup change clear', function () {
                                        if (column.search() !== this.value) {
                                            column.search(this.value).draw();
                                        }
                                    });
                            }

                        }
                    });
            }
        });

    </script>
{% endblock %}
