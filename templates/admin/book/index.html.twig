{% extends 'admin.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sku</th>
                <th>Thumbnail</th>
                <th>Name</th>
                <th>Isbn</th>
                <th>Slug</th>
                <th>ShortDescription</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>IsSaleOff</th>
                <th>DiscountType</th>
                <th>MarkAsFeature</th>
                <th>Status</th>
                <th>DiscountValue</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.sku }}</td>
                <td>{{ book.thumbnail }}</td>
                <td>{{ book.name }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.slug }}</td>
                <td>{{ book.shortDescription }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.stock }}</td>
                <td>{{ book.isSaleOff }}</td>
                <td>{{ book.discountType }}</td>
                <td>{{ book.markAsFeature }}</td>
                <td>{{ book.status }}</td>
                <td>{{ book.discountValue }}</td>
                <td>{{ book.createdAt ? book.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ book.updatedAt ? book.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('admin_book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_book_new') }}">Create new</a>
{% endblock %}
